<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd"
	default-lazy-init="false">

    <bean name="defaultCacheManager" class="com.guard.stone.redis.DefaultCacheManager">
		<constructor-arg index="0" value="${redis.address}"/>
		<constructor-arg index="1" value="${redis.timeout}"/>
		<constructor-arg index="2" value="${redis.max.retry}"/>
		<constructor-arg index="3" value="${dubbo.application.name}"/>
	</bean>


	<bean name="dynamicChangeLogByRedis" class="com.didispace.DynamicChangeLogByRedis">
		<property name="scanPeriod" value="1000"/>
		<property name="applicationName" value="tradecenter"/>
		<property name="defaultCacheManager" ref="defaultCacheManager"/>
		<property name="loggerNames">
			<list>
				<value>com.sport</value>
				<value>org.mybatis</value>
				<value>org.springframework</value>
				<value>java.sql</value>
			</list>
		</property>
	</bean>

</beans>